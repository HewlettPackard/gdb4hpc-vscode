{
  "name": "gdb4hpc",
  "displayName": "GDB4HPC",
  "version": "2.0.0",
  "publisher": "HPE-CDST",
  "repository": {
    "type": "git",
    "url": "https://github.com/HewlettPackard/gdb4hpc-vscode.git"
  },
  "license": "MIT",
  "description": "GDB4HPC Debugger",
  "keywords": [
    "C++",
    "C",
    "GDB4HPC"
  ],
  "icon": "",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Debuggers"
  ],
  "type": "commonjs",
  "scripts": {
    "compile": "tsc -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --external:node-pty --loader:.node=file --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false",
    "package": "vsce package --no-yarn",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify"
  },
  "dependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/debugadapter": "^1.64.0",
    "@vscode/debugprotocol": "^1.64.0",
    "await-notify": "^1.0.1",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vscode/vsce": "^2.31.0",
    "esbuild": "^0.19.12",
    "typescript": "^5.3.3",
    "rimraf": "^6.0.1"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onDebug"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "languages": [
      {
        "id": "fortran",
        "extensions": [
          ".f90",
          ".F90"
        ],
        "configuration": "./fortran-language-configuration.json"
      }
    ],
    "configuration": {
      "title": "GDB4HPC",
      "properties": {}
    },
    "views": {
      "debug": [
        {
          "type": "webview",
          "id": "focusView",
          "name": "Focus",
          "contextualTitle": "Focus"
        },
        {
          "type": "webview",
          "id": "decompView",
          "name": "Decompositions",
          "contextualTitle": "Decompositions"
        },
        {
          "type": "webview",
          "id": "compareView",
          "name": "Comparisons",
          "contextualTitle": "Comparisons"
        },
        {
          "type": "webview",
          "id": "assertView",
          "name": "Assertion Scripts",
          "contextualTitle": "Assertions"
        }
      ]
    },
    "breakpoints": [
      {
        "language": "cpp"
      },
      {
        "language": "c"
      },
      {
        "language": "fortran"
      }
    ],
    "debuggers": [
      {
        "type": "gdb4hpc",
        "label": "GDB4HPC",
        "program": "./dist/extension.js",
        "runtime": "node",
        "languages": [
          "c",
          "cpp",
          "fortran"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "apps": {
                "type": "array",
                "description": "Application to debug",
                "default": []
              },
              "procset": {
                "type": "string",
                "description": "Name and Rank information",
                "default": "App0{1}"
              },
              "program": {
                "type": "string",
                "description": "Absolute path of program to debug",
                "default": ""
              },
              "args": {
                "type": "array",
                "description": "Arguments to pass to inferior",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "Working directory of the target",
                "default": "${workspaceFolder}"
              },
              "env": {
                "type": "object",
                "description": "Environment variables to set in debugger shell",
                "default": {}
              },
              "setupCommands":{
                "type": "array",
                "description": "Commands to run in terminal before gdb4hpc starts",
                "default": ["module load gdb4hpc"]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "gdb4hpc",
            "request": "launch",
            "name": "GDB4HPC",
            "setupCommands": ["module load gdb4hpc"],
            "apps": [
              {
                "procset": "App0{1}",
                "program": "",
                "args": ""
              }
            ],
            "cwd": ".",
            "env": {}
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "decompView.addEntry",
        "title": "Add"
      },
      {
        "command": "compareView.runCompares",
        "title": "Run"
      },
      {
        "command": "compareView.addEntry",
        "title": "Add"
      },
      {
        "command": "assertView.runScripts",
        "title": "Run"
      },
      {
        "command": "assertView.addEntry",
        "title": "Add"
      },
      {
        "command": "assertView.getInfo",
        "title": "Results"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "decompView.addEntry",
          "when": "view == decompView",
          "group": "navigation"
        },
        {
          "command": "compareView.runCompares",
          "when": "view == compareView",
          "group": "navigation"
        },
        {
          "command": "compareView.addEntry",
          "when": "view == compareView",
          "group": "navigation"
        },
        {
          "command": "assertView.runScripts",
          "when": "view == assertView",
          "group": "navigation"
        },
        {
          "command": "assertView.addEntry",
          "when": "view == assertView",
          "group": "navigation"
        },
        {
          "command": "assertView.getInfo",
          "when": "view == assertView",
          "group": "navigation"
        }
      ]
    }
  }
}
